<head>
  <%= render 'layouts/blog/application/head' %>
</head>
<body>
  <div class="container">
    <header class="main-header sixteen columns clearfix">
      <div class="blog-head-info">
        <%= link_to my_avatar(size: 100), '#', class: 'avatar' %>
        <h1><a href="<%= blog_root_path %>"><%=Blog::Config.site_name%></a></h1>
        <h2><%=Blog::Config.site_subtitle%></h2>
      </div>
      <%= rss_icon %>
      <%= render partial: 'layouts/blog/application/social_icons' %>
    </header>

    <div class="content twelve columns">
      <% flash.each do |name, msg| %>
        <div class="flash-notice">
          <%= msg %>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <%= render 'layouts/blog/application/sidebar' %>

  </div>

  <%= render 'layouts/blog/application/footer' %>

  <!--% if content_for?(:footer) %>
    <footer>
      < %= yield :footer %>
    </footer>
  < % end % -->
  <!-- %= render 'layouts/blog/application/disqus' % -->
  <!--%= render 'layouts/blog/application/gauge_analytics' %-->
</body>
</html>
