<div class="navbar">
  <div class="navbar-inner">
    <div class="container" data-blog="nav-bar">
      <%= link_to 'INiMei Blog', blog_admin_path, class: 'brand' %>
      <ul class="nav pull-left" data-blog="nav-bar-left">
        <%= activable_li_tag_with_link t('.add_a_blog'), new_blog_admin_post_path %>
        <%= activable_li_tag_with_link t('.list_blogs'), blog_admin_posts_path, blog_admin_path %>
        <%= activable_li_tag_with_link t('.comments'), blog_admin_comments_path %>
      </ul>

      <ul class="nav navbar-nav pull-right">
        <li><%= link_to t('.home'), root_url(subdomain: nil) %></li>
        <% if logged_in? %>
            <% if current_user.admin? %>
                <li><%= link_to t('.users'), users_url(subdomain: nil) %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('.profile'), user_url(current_user, subdomain: nil) %></li>
                <li><%= link_to t('.setting'), edit_user_url(current_user, subdomain: nil) %></li>
                <li class="divider"></li>
                <li><%= link_to t('.schedules'), schedules_user_url(current_user, subdomain: nil) %></li>
                <li class="divider"></li>
                <li><%= link_to t('.log_out'), logout_url(subdomain: nil), method: 'delete' %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to t('.log_in'), login_url(subdomain: nil) %></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
