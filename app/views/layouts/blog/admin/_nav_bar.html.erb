<div class="navbar">
  <div class="navbar-inner">
    <div class="container" data-blog="nav-bar">
      <%= link_to 'Blog', blog_admin_path, class: 'brand' %>
      <ul class="nav pull-left" data-blog="nav-bar-left">
        <%= activable_li_tag_with_link t('.add_a_blog'), new_blog_admin_post_path %>
        <%= activable_li_tag_with_link t('.list_blogs'), blog_admin_posts_path, blog_admin_path %>
        <%= activable_li_tag_with_link t('.comments'), blog_admin_comments_path %>
      </ul>

      <ul class="nav navbar-nav pull-right">
        <li><%= activable_li_tag_with_link t('.home'), root_path %></li>
        <% if logged_in? %>
            <% if current_user.admin? %>
                <li><%= activable_li_tag_with_link t('.users'), users_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= activable_li_tag_with_link t('.profile'), user_path(current_user) %></li>
                <li><%= activable_li_tag_with_link t('.setting'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= activable_li_tag_with_link t('.schedules'), schedules_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= activable_li_tag_with_link t('.log_out'), logout_path, method: 'delete' %></li>
              </ul>
            </li>
        <% else %>
            <li><%= activable_li_tag_with_link t('.log_in'), login_path %></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
